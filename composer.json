{
    "name": "restruct/edudex-api-client",
    "description": "PHP client library for the EDU-DEX Data API. Framework-agnostic with optional SilverStripe integration.",
    "type": "library",
    "keywords": [
        "edudex",
        "api-client",
        "silverstripe"
    ],
    "homepage": "https://github.com/restruct/edudex-api-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Restruct",
            "role": "Developer"
        },
        {
            "name": "Bart van Irsel/Webium",
            "role": "AI consultant/guru"
        },
        {
            "name": "Claude (Anthropic)",
            "role": "AI Co-Author"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^1.0|^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "silverstripe/framework": "For SilverStripe integration (^5.0)",
        "monolog/monolog": "For enhanced logging support"
    },
    "autoload": {
        "psr-4": {
            "Restruct\\EduDex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Restruct\\EduDex\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
